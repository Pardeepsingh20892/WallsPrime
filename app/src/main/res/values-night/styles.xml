<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Custom Preference Theme -->
    <style name="Theme.Flare.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceFragmentCompatStyle">
            @style/AppPreferenceFragmentCompatStyle
        </item>
    </style>


    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle"
        parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/custom_setting_preference_layout</item>
    </style>


    <style name="flareToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">@color/black</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="flareToolbarMain" parent="flareToolbarOverlay">
        <item name="logo">@drawable/logo_white</item>

    </style>



    <style name="flareToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/black</item>
        <item name="android:elevation">0dp</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

</resources>