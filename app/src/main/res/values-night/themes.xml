<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="PrimeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Custom preference layout with toolbar. -->
        <item name="preferenceTheme">@style/Theme.Prime.PreferenceThemeOverlay</item>

    </style>





    <!--Base theme, all common styling here-->
    <style name="Base.Owl" parent="@style/PrimeTheme">

    </style>



    <style name="Owl" parent="@style/Base.Owl"/>




    <style name="Owl.Yellow">
        <item name="colorPrimary">@color/owl_yellow_200</item>
        <item name="colorSecondary">@color/owl_blue_200</item>
        <item name="colorSurface">@color/owl_yellow_dark_primary</item>
    </style>

    <style name="Owl.Blue">
        <item name="colorPrimary">@color/ocean_color_bright</item>
        <item name="colorSecondary">@color/hot_orange_color</item>
        <item name="colorSurface">@color/owl_blue_dark_primary</item>
    </style>

    <style name="ThemeOverlay.Owl.Blue" parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/owl_blue_200</item>
        <item name="colorSecondary">@color/owl_yellow_200</item>
        <item name="colorSurface">@color/owl_blue_dark_primary</item>
    </style>

    <style name="ThemeOverlay.Owl.Blue.Dark"/>

    <style name="Owl.Pink">
        <item name="colorPrimary">@color/owl_pink_200</item>
        <item name="colorSecondary">@color/owl_pink_200</item>
        <item name="colorSurface">@color/owl_pink_dark_primary</item>
    </style>




</resources>